Params = {
    msg = {
        descr = "the message to write to the output file",
        default = "hello"
    }
}

Outputs = {
    file = {
        descr = "A file containing a message",
    }
}

function Run(_, params, _, outputs)
    system("echo '" .. params.msg .. "' > " .. outputs.file)
end

